/* pages/rcv_task/rcv_task.wxss */

#container {
  margin: 0 15rpx;
}

.task {
  margin: 15rpx 0;
  height: 200rpx;
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
}

.picture {
  width: 150rpx;
  height: 100%;
  border-radius: 10rpx;
}

.textView {
  padding: 25rpx 20rpx;
}

.title {
  font-weight: bold;
  font-size: 1.1em;
}

.time, .sender {
  margin-top: 10rpx;
  margin-bottom: 5rpx;
  font-size: 0.8em;
  color: gray;
}
