.top-row {
  height: 50rpx;
  background: white;
  box-shadow: 0 0 10rpx 5rpx rgba(51, 51, 51, 0.281);
}

.userinfo {
  margin: 50rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 0 40rpx;
  border-radius: 50%;
  overflow: hidden;
}

.userinfo-nickname {
  font-weight: 600;
  font-size: 17pt;
}

.userinfo-gender {
  font-size: 11pt;
}

.title2 {
  font-size: 11pt;
  color: gray;
  margin-left: 40rpx;
  margin-top: 100rpx;
  margin-bottom: 50rpx;

}

.myorderlook-text {
  font-size: 30rpx;
  color: black;
  position: relative;
  right: 20rpx;
  width: 60%;
  text-align: right;
}

.next-image {
  width: 20rpx;
  height: 25rpx;
  position: relative;
  right: 10rpx;
}

.navs {
  display: flex;
}

.nav-item {
  width: 50%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
}

.nav-item .nav-image {
  width: 40rpx;
  height: 40rpx;
  margin: 5rpx;
}

.nav-item text {
  margin-top: 20rpx;
  font-size: 25rpx;
  color: black;
}

/* 列表 */

.person-list {
  display: flex;
  flex-direction: column;
  align-items: left;
}

.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 120rpx;
  width: 100%;
}

.item-image {
  width: 60rpx;
  height: 60rpx;
  margin: 40rpx;
}

.item-text {
  color: black;
  font-size: 35rpx;
  margin-left: 0rpx;
}

.account {
  font-size: 10pt;
  margin-left: 300rpx;
}

.notification {
  font-size: 10pt;
  color: gray;
  margin-left: 250rpx;
}

.person-line {
  width: 100%;
  height: 2rpx;
  background: lightgray;
}
